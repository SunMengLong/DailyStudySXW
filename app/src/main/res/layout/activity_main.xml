<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="#F95D51">

    <com.zhy.autolayout.AutoLinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <com.explem.aidl.dailystudysxw.view.LazyViewPager
        android:id="@+id/home_fragment_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </com.explem.aidl.dailystudysxw.view.LazyViewPager>

    <RadioGroup
        android:id="@+id/rg_home_fragment"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#f5f5f5"
            android:button="@null"
            android:drawableTop="@drawable/homemy"
            android:ellipsize="marquee"
            android:gravity="center"
            android:paddingTop="4dp"
            android:singleLine="true"
            android:text="首页"
            android:textColor="@color/red"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rb_my"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#f5f5f5"
            android:button="@null"
            android:drawableTop="@drawable/classify"
            android:ellipsize="marquee"
            android:gravity="center"
            android:paddingTop="4dp"
            android:singleLine="true"
            android:text="课程分类"
            android:textColor="#999999"
            />

        <RadioButton
        android:id="@+id/rb_circle"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="#f5f5f5"
        android:button="@null"
        android:drawableTop="@drawable/circle"
        android:ellipsize="marquee"
        android:gravity="center"
        android:paddingTop="4dp"
        android:singleLine="true"
        android:text=" 圈子"
            android:textColor="#999999"
         />

        <RadioButton
            android:id="@+id/rb_download"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#f5f5f5"
            android:button="@null"
            android:drawableTop="@drawable/mine"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:paddingTop="4dp"
            android:text="我的"
            android:textColor="#999999"
            />
    </RadioGroup>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
