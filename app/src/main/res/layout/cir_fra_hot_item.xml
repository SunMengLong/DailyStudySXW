<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:padding="10px"
        android:layout_width="match_parent"
        android:layout_height="100px"
        >

        <ImageView
            android:id="@+id/cir_fra_hot_item_titleimg"
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/cir_fra_hot_item_titletv"
            android:textColor="#323232"
            android:layout_marginLeft="110px"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="今天是"/>
        <ImageView
            android:id="@+id/cir_fra_hot_item_guanzhuimg"
            android:layout_alignParentRight="true"
            android:layout_width="120px"
            android:layout_height="120px"
            android:src="@mipmap/guanzhu"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/cir_fra_hot_item_moreimg_lin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="300px">
        <ImageView
            android:id="@+id/cir_fra_hot_item_moreimg_img1"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="15px"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/cir_fra_hot_item_moreimg_img2"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="15px"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/cir_fra_hot_item_moreimg_img3"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="15px"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/cir_fra_hot_item_twoimg_lin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40px">
        <ImageView
            android:id="@+id/cir_fra_hot_item_twoimg_img1"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="15px"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/cir_fra_hot_item_twoimg_img2"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="15px"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/cir_fra_hot_item_oneimg_lin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="500px">
        <ImageView
            android:id="@+id/cir_fra_hot_item_oneimg_img1"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="15px"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:id="@+id/cir_fra_hot_item_tv1"
        android:textColor="#323232"
        android:layout_marginLeft="10px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="尽头大风车"/>
    <TextView
        android:id="@+id/cir_fra_hot_item_tv2"
        android:layout_margin="10px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="尽头大风车"/>
    <TextView
        android:layout_marginTop="10px"
        android:textColor="#F95D51"
        android:drawableLeft="@mipmap/jian"
        android:id="@+id/cir_fra_hot_item_tv3"
        android:layout_marginLeft="10px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="尽头大风车"/>
    <TextView
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ccc"/>
    <LinearLayout
        android:padding="20px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/cir_fra_hot_item_tv4"
            android:layout_marginLeft="50px"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/praise"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 18"/>
        <ImageView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="60px"
            android:src="@mipmap/grayline"/>
        <TextView

            android:layout_centerHorizontal="true"
            android:id="@+id/cir_fra_hot_item_tv5"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/forwarding"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 18"/>
        <ImageView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="60px"
            android:src="@mipmap/grayline"/>
        <TextView
            android:layout_marginRight="50px"
            android:layout_centerHorizontal="true"
            android:id="@+id/cir_fra_hot_item_tv6"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/comments"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 18"/>
    </LinearLayout>
</LinearLayout>
