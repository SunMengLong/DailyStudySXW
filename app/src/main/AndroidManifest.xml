<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.explem.aidl.dailystudysxw">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- 武斌斌权限 -->
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <!--洪阳的屏幕适配-->
        <meta-data
            android:name="design_width"
            android:value="768"/>
        <meta-data
            android:name="design_height"
            android:value="1280"/>
        <!-- Glid加载图片 -->
        <meta-data
            android:name="com.explem.aidl.dailystudysxw.utils.GlideModelConfig"
            android:value="GlideModule" />

        <activity android:name=".GuideActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"/>
        <activity android:name=".base.BaseActivity"/>
        <activity android:name=".login_regist.LoginActivity">
        </activity>
        <activity android:name=".login_regist.RegistActivity">
        </activity>
        <activity android:name=".login_regist.UserInfoActivity">
        </activity>
        <activity android:name=".login_regist.Find_Psw_Activity">
        </activity>
        <activity android:name=".login_regist.Find_Psw_Mail_Activity">
        </activity>
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <activity android:name=".user.UserCourseActivity">
        </activity>
        <activity android:name=".login_regist.SettingActivity">
        </activity>
        <activity android:name=".MyTopicDetail"></activity>
    </application>

</manifest>